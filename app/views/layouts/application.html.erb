<!DOCTYPE html>
<html>
<head>
  <title>SPM</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<!-- barra de Navegacion -->
<nav class="navbar navbar-inverse" role="navigation">
  <!-- Brand and toggle get grouped for better mobile display -->
  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <a class="navbar-brand" href="/">Estudialo! SPM</a>
  </div>

  <!-- Collect the nav links, forms, and other content for toggling -->
  
  <div class="collapse navbar-collapse navbar-ex1-collapse">
  	<% if user_signed_in? %>
	    <ul class="nav navbar-nav">
	      <li><a href="#">Trivia</a></li>
	      <li><a href="#">Link</a></li>
	    </ul>
    <% end %>
    <ul class="nav navbar-nav pull-right">
    	<p class="navbar-text">
		<% if user_signed_in? %>
		  Bienvenido!</p>
		  <!--Bienvenido <strong><%= current_user.email %></strong>.-->
		  <li class="dropdown">
	        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><strong><%= current_user.email %></strong>.<b class="caret"></b></a>
	        <ul class="dropdown-menu">
	      		<li><%= link_to 'Editar Perfil', edit_user_registration_path%></li>
		  		<li><%= link_to "Cerrar Sesión", destroy_user_session_path, method: :delete%></li>    
	        </ul>
	      </li> 
		<% else %>
		  <%= link_to "Iniciar Sesión", new_user_session_path, :class => 'navbar-link'%></p>
		<% end %>
      
    </ul>
  </div><!-- /.navbar-collapse -->
</nav>

<!-- fin barra de navegacion -->

<!-- mensajes de alerta -->
<% if notice %>
  <p class="alert alert-dismissable alert-success">
  	<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  	<%= notice %>
  </p>
<% end %>
<% if alert %>
  <p class="alert alert-dismissable alert-danger">
  	<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  	<%= alert %>
  </p>
<% end %>
<!-- fin mensajes de alerta -->

<%= yield %>

</body>
</html>
